<p id="notice"><%= notice %></p>

<h1>Listing Team Members</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Qualifications</th>
      <th>Teaching experience</th>
      <th>Industry experience</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_members.each do |team_member| %>
      <tr>
        <td><%= team_member.name %></td>
        <td><%= team_member.bio %></td>
        <td><%= team_member.qualifications %></td>
        <td><%= team_member.teaching_experience %></td>
        <td><%= team_member.industry_experience %></td>
        <td><%= link_to 'Show', team_member %></td>
        <td><%= link_to 'Edit', edit_team_member_path(team_member) %></td>
        <td><%= link_to 'Destroy', team_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

