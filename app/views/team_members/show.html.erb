<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team_member.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @team_member.bio %>
</p>

<p>
  <strong>Qualifications:</strong>
  <%= @team_member.qualifications %>
</p>

<p>
  <strong>Teaching experience:</strong>
  <%= @team_member.teaching_experience %>
</p>

<p>
  <strong>Industry experience:</strong>
  <%= @team_member.industry_experience %>
</p>

<h2>Social Profiles</h2>
<% @team_member.social_profiles.each do |sp| %>
    <p>
      <b>Label:</b>
      <%= sp.label %>
    </p>

    <p>
      <b>Url:</b>
      <%= sp.url %>
    </p>

    <%= link_to 'Delete Profile', [sp.team_member, sp],
                :confirm => 'Are you sure?',
                :method => :delete %>
<% end %>

<h2>Add a Social Profile</h2>
<%= form_for([@team_member, @team_member.social_profiles.build]) do |sp| %>
    <div class="field">
      <%= sp.label :label %><br />
      <%= sp.text_field :label %>
    </div>
    <div class="field">
      <%= sp.label :url %><br />
      <%= sp.text_area :url %>
    </div>
    <div class="actions">
      <%= sp.submit %>
    </div>
<% end %>

<%= link_to 'Edit', edit_team_member_path(@team_member) %> |
<%= link_to 'Back', team_members_path %>
